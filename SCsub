Import("env")

m_env = env.Clone()

# w2c2 glicol_wasm.wasm glicol.c
sources = [env.Glob("*.cpp"), env.Glob("wasm2c/glicol/*.c"),env.Glob("wasm2c/base/*.c")]
m_env.Append(CPPPATH=[m_env.Dir(s).abspath for s in ["wasm2c/base", "wasm2c/glicol"]])
m_env.Append(CPPFLAGS=["-fno-optimize-sibling-calls","-frounding-math"])
m_env.add_source_files(env.modules_sources, sources)
